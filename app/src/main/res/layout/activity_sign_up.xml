<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firebase_app"
    tools:context=".SignUpActivity">


    <ImageButton
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_boy"
        android:background="@drawable/profile_back"
        />

    <RelativeLayout
        android:id="@+id/mid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/user_profile_photo"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_mid_layout_back">

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/field_back"
            android:drawableLeft="@drawable/ic_email"
            android:hint="  Email"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/pass_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email_field"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/field_back"
            android:drawableLeft="@drawable/ic_lock"
            android:hint="  Password"
            android:paddingStart="15dp" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pass_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/transparent"
            android:text="Sign Up" />


    </RelativeLayout>

    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/mid_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_mid_layout_back"
        android:gravity="center_horizontal|center_vertical"
        android:text="Already have an account\nLogin here"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>